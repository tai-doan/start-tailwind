{
    "compilerOptions": {
        "checkJs": false,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "target": "es2020",
        "module": "es2015",
        "baseUrl": "./src",
        "paths": {
            "src/*": [
                "./src/*"
            ]
        }
    },
    "exclude": [
        "dist",
        "node_modules",
        ".vscode",
        "coverage",
        ".npm",
        ".yarn",
        "build",
        "build-config",
        "public"
    ],
    "typeAcquisition": {
        "enable": true,
        "include": [
            "react",
            "react-dom",
            "jest",
            "testing-library__jest-dom"
        ]
    }
}